{
	"name": "aquarelay/aquarelay",
	"description": "Proxy server for Minecraft: Bedrock Edition written with PHP",
	"type": "project",
	"license": "LGPL-3.0-only",
	"require": {
		"php": ">=8.1",
		"pocketmine/raklib": "~1.2.0",
		"pocketmine/snooze": "^0.5.0",
		"pocketmine/raklib-ipc": "~1.0.0",
		"ext-pmmpthread": "^6.1.0",
		"ext-encoding": "~1.0.0",
		"ext-zlib": ">=1.2.11",
		"netresearch/jsonmapper": "~v5.0.0",
		"pocketmine/color": "^0.3.0",
		"pocketmine/log": "^0.4.0",
		"pocketmine/bedrock-block-upgrade-schema": "~5.2.0+bedrock-1.21.110",
		"pocketmine/bedrock-data": "~6.3.0+bedrock-1.21.130",
		"pocketmine/bedrock-item-upgrade-schema": "~1.16.0+bedrock-1.21.110",
		"pocketmine/bedrock-protocol": "~54.0.0+bedrock-1.21.130",
		"symfony/yaml": "^7.0",
		"ramsey/uuid": "~4.9.0",
		"symfony/filesystem": "~6.4.0"
	},
	"autoload": {
		"psr-4": {
			"aquarelay\\": "src/"
		},
		"files": [
			"src/CoreConstants.php"
		]
	},
	"scripts": {
		"build": [
			"@composer install --no-dev --classmap-authoritative --ignore-platform-reqs",
			"@php -dphar.readonly=0 scripts/build.php"
		]
	},
	"minimum-stability": "stable",
	"prefer-stable": true
}
