{
	"name": "aquarelay/aquarelay",
	"description": "Proxy server for Minecraft: Bedrock Edition written with PHP",
	"type": "project",
	"license": "LGPL-3.0-only",
	"require": {
		"php": ">=8.2",
		"pocketmine/raklib": "dev-stable",
		"pocketmine/snooze": "^0.5.0",
		"aquarelay/raklib-ipc": "dev-master",
		"ext-pmmpthread": "^6.1.0",
		"ext-encoding": "~1.0.0",
		"ext-zlib": ">=1.2.11",
		"netresearch/jsonmapper": "~v5.0.0",
		"pocketmine/color": "^0.3.0",
		"pocketmine/log": "^0.4.0",
        "nethergamesmc/bedrock-protocol": "dev-master",
		"symfony/yaml": "^7.0",
		"ramsey/uuid": "~4.9.0",
		"symfony/filesystem": "~6.4.0",
		"ext-igbinary": "*",
		"ext-pcre": "*"
	},
	"autoload": {
		"psr-4": {
			"aquarelay\\": "src/"
		},
		"files": [
			"src/CoreConstants.php"
		]
	},
	"scripts": {
		"build": [
			"@composer install --no-dev --classmap-authoritative --ignore-platform-reqs",
			"@php -dphar.readonly=0 scripts/build.php"
		]
	},
	"repositories": [
      {
         "type": "vcs",
         "url":  "git@github.com:NetherGamesMC/BedrockProtocol.git"
      },
	  {
		 "type": "vcs",
		 "url":  "https://github.com/AquaRelay/RakLibIpc"
	  }
   ],
   "minimum-stability": "dev",
   "prefer-stable": true,
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^3.92"
	}
}
